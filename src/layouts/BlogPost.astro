---
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  description?: string;
  ogImage?: string;
  nocomment: boolean;
}>;
const {
  frontmatter: { title, description = "", ogImage, nocomment },
} = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
---

<html lang="ko">
  <head>
    <title>{title}</title>
    <link rel="canonical" href={canonical} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {description && <meta name="description" content={description} />}
    <meta name="keywords" content="프론트엔드, Frontend, React, TypeScript, Next.js, 웹개발, 개발블로그, JavaScript, 개발자, 이예슬, 쎄옹블로그, 쎄옹 블로그, 쎄옹의 개발 블로그, 이예슬 블로그" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content={canonical} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <!-- Google search console -->
    <meta name="google-site-verification" content="strh2kXWs-eYvP8zwz0bIZMLBThPA0mLKvxzYftfQ6k" />
    <!-- Naver search console -->
    <meta name="naver-site-verification" content="6724760dddce453fb49399f0a1133ab8c91d000f" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CZD8XP5VE0"></script>
    <script
      is:inline
      set:html={`
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-CZD8XP5VE0');
      `}
    />
    <meta name="google-adsense-account" content="ca-pub-3760441216253528" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3760441216253528"
      crossorigin="anonymous"></script>
  </head>

  <body>
    <main>
      <article>
        <slot />
      </article>
      {
        nocomment ? null : (
          <div id="comments" class="comments">
            <script
              is:inline
              set:html={`
                (function() {
                  var script = document.createElement('script');
                  script.src = 'https://utteranc.es/client.js';
                  script.setAttribute('repo', 'yeaseul7/yeaseul7.github.io');
                  script.setAttribute('issue-term', ${JSON.stringify(title)});
                  script.setAttribute('label', 'comments');
                  script.setAttribute('theme', 'preferred-color-scheme');
                  script.crossOrigin = 'anonymous';
                  script.async = true;
                  document.currentScript.parentElement.appendChild(script);
                })();
              `}
            />
          </div>
        )
      }
    </main>
  </body>
</html>
